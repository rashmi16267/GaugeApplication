<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ToggleButton
        android:id="@+id/home_pumpToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:text="ToggleButton"
        android:textColor="@color/white"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="584dp" />

    <ProgressBar
        android:id="@+id/progressHumidity"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="384dp" />

    <TextView
        android:id="@+id/soilMoistureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soil Moisture"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="118dp" />

    <TextView
        android:id="@+id/HumidityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="340dp" />

    <ProgressBar
        android:id="@+id/progressBar_soilMoisture"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="162dp" />

    <TextView
        android:id="@+id/temperatureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="254dp"
        tools:layout_editor_absoluteY="119dp" />

    <TextView
        android:id="@+id/SoilMoistureValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24.707%"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="226dp" />

    <ProgressBar
        android:id="@+id/progressBar_temperature"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="291dp"
        tools:layout_editor_absoluteY="162dp" />

    <TextView
        android:id="@+id/temperatureValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27.000°C"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="265dp"
        tools:layout_editor_absoluteY="226dp" />

    <TextView
        android:id="@+id/HumidityValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="71.000g/m²"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="445dp" />

    <TextView
        android:id="@+id/PumpControlLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pump Manual Control"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="549dp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteY="2dp" />

    <TextView
        android:id="@+id/HomeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="@color/white"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="12dp" />

    <ImageButton
        android:id="@+id/menuicon_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        app:srcCompat="@drawable/ic_menu_icon_light"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="9dp" />


</androidx.constraintlayout.widget.ConstraintLayout>