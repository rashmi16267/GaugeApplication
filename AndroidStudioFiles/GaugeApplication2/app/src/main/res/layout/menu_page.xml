<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/green">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="3dp" />

    <Button
        android:id="@+id/menu_homebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:text="Home"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="173dp" />

    <Button
        android:id="@+id/menu_settingsbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:text="Settings"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="260dp" />

    <Button
        android:id="@+id/menu_websitebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:text="Website"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="341dp" />

    <Button
        android:id="@+id/menu_contactusbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:text="Contact Us"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="425dp" />

    <Button
        android:id="@+id/menu_logoutbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:text="Logout"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="510dp" />

    <Button
        android:id="@+id/menu_backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:backgroundTint="@color/green"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="6dp" />

    <TextView
        android:id="@+id/MenuLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textColor="@color/white"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="14dp" />

</androidx.constraintlayout.widget.ConstraintLayout>