<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="47dp"
        android:layout_height="43dp"
        android:onClick="goToMenuFromSettings"
        app:srcCompat="@drawable/ic_menu_icon"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="7dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/toolbar2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/toolbar2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="7dp" />

    <TextView
        android:id="@+id/menuTextViewSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/toolbar2"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toEndOf="@+id/toolbar2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="7dp" />

    <Button
        android:id="@+id/helpbutton"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:onClick="goToHelp"
        android:text="Help"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/WebsiteSettingsbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connectToMbutton"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/connectToMbutton"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:onClick="goToConnectToMicroprocessor"
        android:text="Connect to microprocessor"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/helpbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notifbutton"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/feedbackbutton"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:onClick="goToFeedback"
        android:text="Feedback"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WebsiteSettingsbutton"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/accSettingsbutton"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:onClick="goToAccountSettings"
        android:text="Account Settings"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/notifbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/WebsiteSettingsbutton"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:onClick="goToWebsiteFromSettings"
        android:text="Go To Website"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/feedbackbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helpbutton"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/notifbutton"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:onClick="goToNotifications"
        android:text="Notifications"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/connectToMbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accSettingsbutton"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>