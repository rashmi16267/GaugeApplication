<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:backgroundTint="@color/green"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="1dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/toolbar3"
        app:layout_constraintEnd_toStartOf="@+id/toolbar3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/toolbar3"
        app:layout_constraintTop_toBottomOf="@+id/toolbar3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/menutextView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/toolbar3"
        app:layout_constraintEnd_toStartOf="@+id/toolbar3"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toEndOf="@+id/toolbar3"
        app:layout_constraintTop_toBottomOf="@+id/toolbar3"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="52dp"
        android:layout_height="35dp"
        android:onClick="goToHomeFromMenu"
        app:layout_constraintBottom_toTopOf="@+id/toolbar3"
        app:layout_constraintEnd_toStartOf="@+id/toolbar3"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toEndOf="@+id/toolbar3"
        app:layout_constraintTop_toBottomOf="@+id/toolbar3"
        app:srcCompat="@drawable/ic_back_icon"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="10dp" />

    <Button
        android:id="@+id/WebsiteFromSettingsButton"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:onClick="goToWebsiteFromMenu"
        android:text="Website"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/SettingsFromMenuButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contactUsFromMenuButton"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/SettingsFromMenuButton"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:onClick="goToSettingsFromMenu"
        android:text="Settings"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/logoutbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WebsiteFromSettingsButton"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/HomeFromMenuButton"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:onClick="goToHome"
        android:text="Home"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/contactUsFromMenuButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar3"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/contactUsFromMenuButton"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:onClick="goToContactUsFromMenu"
        android:text="Contact us"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/WebsiteFromSettingsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HomeFromMenuButton"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/logoutbutton"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:onClick="goToLoginFromMenu"
        android:text="Logout"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SettingsFromMenuButton"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>