<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar5"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp" />

    <ImageButton
        android:id="@+id/imageButton2933"
        android:layout_width="54dp"
        android:layout_height="42dp"
        android:backgroundTint="@color/green"
        android:onClick="goToSettingsFromNotifications"
        app:layout_constraintEnd_toStartOf="@+id/toolbar5"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toEndOf="@+id/toolbar5"
        app:srcCompat="@drawable/ic_back_icon"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="6dp" />

    <Switch
        android:id="@+id/notificationSwitch"
        android:layout_width="304dp"
        android:layout_height="51dp"
        android:checked="true"
        android:text="Notifications"
        android:textOff="Notifications OFF"
        android:textOn="Notifications ON"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/textView1175"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar5" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/toolbar5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/toolbar5"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="10dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/toolbar5"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toEndOf="@+id/toolbar5"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="10dp" />

    <TextView
        android:id="@+id/textView1836"
        android:layout_width="276dp"
        android:layout_height="205dp"
        android:text="If you turn it off, you should be able to see a toast message on your screen indicating that notifications are turned off."
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1175" />

    <TextView
        android:id="@+id/textView1175"
        android:layout_width="278dp"
        android:layout_height="138dp"
        android:text="Turn on Notifications to recieve a notification as a confirmation message to make sure it works."
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/textView1836"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notificationSwitch" />

</androidx.constraintlayout.widget.ConstraintLayout>